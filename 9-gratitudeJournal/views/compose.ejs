<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-label-group titleGroup">
    <label for="titleContent">Title</label>
    <input name="title" type="text" class="form-control" required autofocus autocomplete="off">
  </div>
  <div class="form-label-group journalGroup">
    <label for="journalContent">Journal</label>
    <textarea name="journal" class="form-control" rows="8" cols="80" required></textarea>
  </div>
  <button class="btn btn-lg btn-primary" type="submit">Publish</button>
</form>

<%- include("partials/footer"); -%>
